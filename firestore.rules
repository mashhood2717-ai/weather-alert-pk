rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Manual alerts - only authenticated admins can write, app can read
    match /manual_alerts/{alertId} {
      // For now, allow all reads and writes (you should add authentication later)
      allow read, write: if true;
      
      // When you add authentication:
      // allow read: if true;
      // allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Saved zones for alert targeting
    match /saved_zones/{zoneId} {
      allow read, write: if true;
    }
    
    // User locations for radius-based targeting
    match /user_locations/{userId} {
      allow read: if true;
      allow write: if true;
      
      // When you add authentication:
      // allow read: if request.auth != null;
      // allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Alert delivery status
    match /alert_deliveries/{deliveryId} {
      allow read, write: if true;
    }

    // Road alerts for travel weather ticker
    match /road_alerts/{alertId} {
      // App can read all alerts
      allow read: if true;
      // Only admin portal can write (for now allow all, add auth later)
      allow write: if true;
    }

    // Users collection for user tracking
    match /users/{userId} {
      allow read, write: if true;
    }

    // Alert receipts for tracking alert delivery
    match /alert_receipts/{receiptId} {
      allow read, write: if true;
    }
  }
}
